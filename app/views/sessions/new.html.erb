<form class="new-session" action="<%= session_url %>" method="post">
  <%= auth_token_input %>

  <label class="username-label">
    Username
    <input class="username-input" type="text" name="user[username]" value="">
  </label>

  <label class="password-label">
    Password
    <input class="password-input" type="password" name="user[password]" value="">
  </label>

  <input class="sign-in-submit" type="submit" value="Sign In">
</form>
<div class="sign-up-link"><%= link_to "Don't have an account? Sign up instead.", new_user_url %></div>
